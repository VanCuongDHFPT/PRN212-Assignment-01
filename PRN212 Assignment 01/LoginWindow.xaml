<Window x:Class="PRN212_Assignment_01.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Assignment_01"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">

    <Grid>
        <Border Margin="20"
                Background="White"
                CornerRadius="10"
                Padding="20">

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Login"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="Email" FontWeight="SemiBold" Margin="5,0,0,5"/>
                <TextBox x:Name="txtemail"
                         Height="40"
                         FontSize="14"
                         Padding="10"
                         Background="#FAFAFA"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="SemiBold" Margin="10,15,0,5"/>
                <PasswordBox x:Name="txtPassword"
                             Height="40"
                             FontSize="14"
                             Padding="10"
                             Background="#FAFAFA"
                             BorderBrush="#CCC"
                             BorderThickness="1"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Height="40"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#0078D7"
                        Foreground="White"
                        Cursor="Hand"
                        BorderThickness="0"
                        Margin="0,0,0,10" Click="Button_Click"
                       >
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0078D7"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <!-- Switch to register -->
                <TextBlock HorizontalAlignment="Center" FontSize="13">
                    <Run Text="Don't have an account? "/>
                    <Hyperlink x:Name="lnkLoginregister" Click="LnkLoginregister" >
                        Register here
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
