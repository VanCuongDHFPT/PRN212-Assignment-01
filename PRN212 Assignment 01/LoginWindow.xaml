<Window x:Class="PRN212_Assignment_01.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Assignment_01"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Border Margin="20"
                Background="White"
                CornerRadius="10"
                Padding="20">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Login"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="SemiBold" Margin="5,0,0,5"/>
                <TextBox x:Name="txtemail"
                         Height="40"
                         FontSize="14"
                         Padding="10"
                         Background="#FAFAFA"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="SemiBold" Margin="10,15,0,5"/>
                <PasswordBox x:Name="txtPassword"
                             Height="40"
                             FontSize="14"
                             Padding="10"
                             Background="#FAFAFA"
                             BorderBrush="#CCC"
                             BorderThickness="1"/>

                <!-- Two Login Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Login Customer"
                            Width="150"
                            Height="40"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="#4CAF50"
                            Foreground="White"
                            Margin="5"
                            Cursor="Hand"
                            Click="LoginCustomer_Click"/>

                    <Button Content="Login Manager"
                            Width="150"
                            Height="40"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="#2196F3"
                            Foreground="White"
                            Margin="5"
                            Cursor="Hand"
                            Click="LoginManager_Click"/>
                </StackPanel>

                <!-- Switch to register -->
                <TextBlock HorizontalAlignment="Center" FontSize="13" Margin="0,20,0,0">
                    <Run Text="Don't have an account? "/>
                    <Hyperlink x:Name="lnkLoginregister" Click="LnkLoginregister">
                        Register here
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
